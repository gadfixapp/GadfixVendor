<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/layout_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp">

                    <LinearLayout
                        android:layout_width="125dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:padding="5dp"
                            app:srcCompat="@drawable/profile_icon_" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:layout_toRightOf="@+id/layout_icon">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="5dp"
                        android:layout_toRightOf="@+id/layout_name">

                        <ImageView
                            android:id="@+id/pay_ic"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="0dp"
                            android:paddingTop="5dp"
                            app:srcCompat="@drawable/ic_notification" />
                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/layout_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/shop_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:background="@color/black"
                            android:editable="false"
                            android:fontFamily="@font/bungee"
                            android:paddingLeft="10dp"
                            android:text="SHOP NAME"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_name">

                        <EditText
                            android:id="@+id/shopaddress"
                            android:layout_width="235dp"
                            android:layout_height="71dp"
                            android:autoSizeTextType="uniform"
                            android:background="@color/black"
                            android:editable="false"
                            android:paddingLeft="10dp"
                            android:text="Shop Address"
                            android:textColor="@color/white" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_icon">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/shopcontact"
                            android:layout_width="168dp"
                            android:layout_height="40dp"
                            android:padding="5dp"
                            android:autoSizeTextType="uniform"
                            android:background="@color/black"
                            android:editable="false"
                            android:paddingRight="10dp"
                            android:text="Shop Ph No"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layout_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:padding="5dp"
                    android:layout_toRightOf="@+id/layout_contact">

                    <Button
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:backgroundTint="#ffb74d"
                        android:text="connect" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_button"
                    android:paddingLeft="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:id="@+id/divider"
                            android:layout_width="395dp"
                            android:layout_height="2dp"
                            android:background="@color/white"
                            />
                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
</RelativeLayout>
</layout>